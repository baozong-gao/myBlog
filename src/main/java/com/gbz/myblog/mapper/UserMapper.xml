<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
         PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
         "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gbz.myblog.mapper.UserMapper">
	<resultMap type="com.gbz.myblog.bean.User" id="user">
		<collection property="Id" column="id" />
		<collection property="userName" column="user_name" />
		<collection property="password" column="password" />
	</resultMap>

	<select id="getUserById" parameterType="long" resultMap="user">
		select
		id,
		user_name,
		password
		from user where id = ${id}
	</select>
	
	<select id="getUserByNameAndPass" resultMap="user">
		select
		id,
		user_name,
		password
		from user where user_name = ${user} and password = ${password}
	</select>


</mapper> 

